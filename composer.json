{
    "name": "nextmwa/blade-ionicons",
    "description": "A package to easily make use of ionicons in your Laravel 10 Blade views.",
    "keywords": [
        "Blade",
        "nextmwa",
        "blade-ionicons",
        "ionicons",
        "laravel",
        "laravel 10"
    ],
    "homepage": "https://github.com/nextmwa/blade-ionicons",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Leonardo Ghilarducci",
            "email": "tvehgb1o@duck.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0",
        "blade-ui-kit/blade-icons": "^1.5"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Nextmwa\\BladeIonicons\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nextmwa\\BladeIonicons\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nextmwa\\BladeIonicons\\BladeIoniconsServiceProvider"
            ],
            "aliases": {
                "BladeIonicons": "Nextmwa\\BladeIonicons\\BladeIoniconsFacade"
            }
        }
    }
}
